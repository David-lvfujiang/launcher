<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SettingsDeviceContractsNickNameActivity"
    android:background="@mipmap/setting_background">

    <ImageView
        android:id="@+id/change_nameinfo_back"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:src="@mipmap/settings_set_back"
        app:layout_constraintBottom_toBottomOf="@+id/info_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/info_tv" />

    <TextView
        android:id="@+id/info_tv"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@mipmap/settings_main"
        android:gravity="center"
        android:text="@string/settings_contracts_detail_info"
        android:textColor="#ff00f0ff"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="964px"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:background="@mipmap/settings_item"
            android:layout_marginLeft="33px">

            <com.fenda.common.view.CircleImageView
                android:id="@+id/nic_name_icon"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/settings_head_icon"
                android:layout_marginLeft="40dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/nick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="40dp"
                    android:textSize="25dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="用户名称："
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/modify_nick_name"
            android:layout_width="964px"
            android:layout_height="110dp"
            android:background="@mipmap/settings_item"
            android:layout_marginLeft="33px"
            android:text="@string/settings_contract_info_change_nickname"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:gravity="center_vertical"
            android:paddingLeft="35dp"
            android:clickable="true"/>
        <TextView
            android:id="@+id/delect_this_user"
            android:layout_width="964px"
            android:layout_height="110dp"
            android:background="@mipmap/settings_item"
            android:layout_marginLeft="33px"
            android:text="@string/settings_contract_info_delect_number"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:gravity="center_vertical"
            android:paddingLeft="35dp"
            android:clickable="true"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/admin_unbind_this"
            android:layout_width="964px"
            android:layout_height="110dp"
            android:background="@mipmap/settings_item"
            android:layout_marginLeft="33px"
            android:text="@string/settings_contract_info_unbind"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:clickable="true"
            android:visibility="gone"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
