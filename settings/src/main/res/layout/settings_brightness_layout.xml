<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fenda.settings.activity.SetttingsBrightnessActivity"
    android:background="@mipmap/settings_bind_netset_background">

    <ImageView
        android:id="@+id/light_back_iv"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:src="@mipmap/settings_set_back"
        app:layout_constraintBottom_toBottomOf="@+id/light_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/light_tv" />

    <TextView
        android:id="@+id/light_tv"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@mipmap/settings_main"
        android:gravity="center"
        android:text="@string/settings_brightness"
        android:textColor="#ff00f0ff"
        android:textSize="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="290dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/settings_sun"
            android:layout_gravity="center"/>

        <SeekBar
            android:id="@+id/light_seekbar"
            android:layout_width="680dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
