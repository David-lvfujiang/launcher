<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="964px"
        android:layout_height="120dp"
        android:background="@mipmap/settings_item">

        <ImageView
            android:id="@+id/wifi_level"
            android:layout_width="40dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="35dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/wifi_ssid"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp"/>

        <ImageView
            android:id="@+id/wifi_list_item_connecting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible"
            android:layout_marginRight="55dp" />
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="17dp"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/connected_wifi_status_icon"
            android:layout_width="35px"
            android:layout_height="35px"
            android:src="@mipmap/settings_wifi_connected_icon"
            android:layout_gravity="center"
            android:layout_marginRight="40dp"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>

