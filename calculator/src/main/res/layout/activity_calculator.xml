<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/calculator_bg"
    android:orientation="vertical"
    tools:context=".CalculatorActivity">
    <include layout="@layout/title_layout"/>
    <LinearLayout
        android:id="@+id/lin_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/expressionOutputView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/demension_dp60"
                android:gravity="center_vertical|right"
                android:scrollbars="horizontal"
                android:textColor="#BBBBBB"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/input_outputView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/demension_dp90"
                android:gravity="center_vertical|right"
                android:scrollbars="horizontal"
                android:text="0"
                android:textColor="#fff"
                android:textSize="35sp" />

        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:columnCount="5"
            android:rowCount="4">

            <Button
                android:id="@+id/calculator_bt7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:background="@drawable/calculator_button_black"
                android:text="7"
                android:textColor="#fff"
                android:textSize="40sp" />

            <Button
                android:id="@+id/calculator_bt8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:background="@drawable/calculator_button_black"
                android:text="8"
                android:textColor="#fff"
                android:textSize="40sp" />

            <Button
                android:id="@+id/calculator_bt9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:background="@drawable/calculator_button_black"
                android:text="9"
                android:textColor="#fff"
                android:textSize="40sp" />

            <Button
                android:id="@+id/calculator_bt_div"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:background="@drawable/calculator_button_gray"
                android:text="÷"
                android:textColor="#fff"
                android:textSize="40sp" />

            <Button
                android:id="@+id/calculator_bt_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="4"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:background="@drawable/calculator_button_black"
                android:text="Del"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="40sp" />

            <Button
                android:id="@+id/calculator_bt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:background="@drawable/calculator_button_black"
                android:text="4"
                android:textColor="#fff"
                android:textSize="40sp" />

            <Button
                android:id="@+id/calculator_bt5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:background="@drawable/calculator_button_black"
                android:text="5"
                android:textColor="#fff"
                android:textSize="40sp" />

            <Button
                android:id="@+id/calculator_bt6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:background="@drawable/calculator_button_black"
                android:text="6"
                android:textColor="#fff"
                android:textSize="40sp" />

            <Button
                android:id="@+id/calculator_bt_mul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:background="@drawable/calculator_button_gray"
                android:text="×"
                android:textColor="#fff"
                android:textSize="40sp" />

            <Button
                android:id="@+id/calculator_bt_lpar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="4"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:background="@drawable/calculator_button_black"
                android:text="("
                android:textColor="#fff"
                android:textSize="40sp" />

            <Button
                android:id="@+id/calculator_bt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:background="@drawable/calculator_button_black"
                android:text="1"
                android:textColor="#fff"
                android:textSize="40sp" />

            <Button
                android:id="@+id/calculator_bt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:background="@drawable/calculator_button_black"
                android:text="2"
                android:textColor="#fff"
                android:textSize="40sp" />

            <Button
                android:id="@+id/calculator_bt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:background="@drawable/calculator_button_black"
                android:text="3"
                android:textColor="#fff"
                android:textSize="40sp" />

            <Button
                android:id="@+id/calculator_bt_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:background="@drawable/calculator_button_gray"
                android:text="—"
                android:textColor="#fff"
                android:textSize="40sp" />

            <Button
                android:id="@+id/calculator_bt_rpar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="4"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:background="@drawable/calculator_button_black"
                android:text=")"
                android:textColor="#fff"
                android:textSize="40sp" />

            <Button
                android:id="@+id/calculator_bt_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:background="@drawable/calculator_button_black"
                android:text="."
                android:textColor="#fff"
                android:textSize="40sp" />

            <Button
                android:id="@+id/calculator_bt0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:background="@drawable/calculator_button_black"
                android:text="0"
                android:textColor="#fff"
                android:textSize="40sp" />

            <Button
                android:id="@+id/calculator_bt_clr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:background="@drawable/calculator_button_black"
                android:text="清空"
                android:textColor="#fff"
                android:textSize="28sp" />

            <Button
                android:id="@+id/calculator_bt_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:background="@drawable/calculator_button_gray"
                android:text="+"
                android:textColor="#fff"
                android:textSize="40sp" />

            <Button
                android:id="@+id/calculator_bt_equal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="4"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:background="@drawable/calculator_button_orange"
                android:text="="
                android:textColor="#fff"
                android:textSize="40sp" />
        </GridLayout>
    </LinearLayout>
</LinearLayout>