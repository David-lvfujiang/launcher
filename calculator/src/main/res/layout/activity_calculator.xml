<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/calculator_bg"
    android:orientation="vertical"
    tools:context=".CalculatorActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/calculator_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingLeft="@dimen/demension_dp50"
            android:paddingRight="@dimen/demension_dp50"
            android:src="@mipmap/calculator_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="计算器"
            android:textColor="#fff"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/expressionOutputView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:layout_weight="2"
                android:textColor="#BBBBBB"
                android:gravity="center_vertical|right"/>

            <TextView
                android:id="@+id/input_outputView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_weight="3"
                android:textSize="50sp"
                android:textColor="#fff"
                android:gravity="center_vertical|right"/>
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:columnCount="5"
            android:rowCount="4">

            <Button
                android:id="@+id/calculator_bt7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:layout_row="0"
                android:layout_column="0"
                android:textSize="40sp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:textColor="#fff"
                android:background="@drawable/calculator_button_black"/>
            <Button
                android:id="@+id/calculator_bt8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:layout_row="0"
                android:layout_column="1"
                android:textSize="40sp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:textColor="#fff"
                android:background="@drawable/calculator_button_black"/>
            <Button
                android:id="@+id/calculator_bt9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:layout_row="0"
                android:layout_column="2"
                android:textSize="40sp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:textColor="#fff"
                android:background="@drawable/calculator_button_black"/>
            <Button
                android:id="@+id/calculator_bt_div"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="÷"
                android:layout_row="0"
                android:layout_column="3"
                android:textSize="40sp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:textColor="#fff"
                android:background="@drawable/calculator_button_gray"/>

            <Button
                android:id="@+id/calculator_bt_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="4"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:background="@drawable/calculator_button_black"
                android:text="Del"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="40sp" />
            <Button
                android:id="@+id/calculator_bt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:layout_row="1"
                android:layout_column="0"
                android:textSize="40sp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:textColor="#fff"
                android:background="@drawable/calculator_button_black"/>
            <Button
                android:id="@+id/calculator_bt5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_row="1"
                android:layout_column="1"
                android:textSize="40sp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:textColor="#fff"
                android:background="@drawable/calculator_button_black"/>
            <Button
                android:id="@+id/calculator_bt6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:layout_row="1"
                android:layout_column="2"
                android:textSize="40sp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:textColor="#fff"
                android:background="@drawable/calculator_button_black"/>
            <Button
                android:id="@+id/calculator_bt_mul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="×"
                android:layout_row="1"
                android:layout_column="3"
                android:textSize="40sp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:textColor="#fff"
                android:background="@drawable/calculator_button_gray"/>

            <Button
                android:id="@+id/calculator_bt_lpar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="("
                android:layout_row="1"
                android:layout_column="4"
                android:textSize="40sp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:textColor="#fff"
                android:background="@drawable/calculator_button_black"/>
            <Button
                android:id="@+id/calculator_bt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_row="2"
                android:layout_column="0"
                android:textSize="40sp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:textColor="#fff"
                android:background="@drawable/calculator_button_black"/>
            <Button
                android:id="@+id/calculator_bt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:layout_row="2"
                android:layout_column="1"
                android:textSize="40sp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:textColor="#fff"
                android:background="@drawable/calculator_button_black"/>
            <Button
                android:id="@+id/calculator_bt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:layout_row="2"
                android:layout_column="2"
                android:textSize="40sp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:textColor="#fff"
                android:background="@drawable/calculator_button_black"/>

            <Button
                android:id="@+id/calculator_bt_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:background="@drawable/calculator_button_gray"
                android:text="—"
                android:textColor="#fff"
                android:textSize="40sp" />
            <Button
                android:id="@+id/calculator_bt_rpar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")"
                android:layout_row="2"
                android:layout_column="4"
                android:textSize="40sp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:textColor="#fff"
                android:background="@drawable/calculator_button_black"/>
            <Button
                android:id="@+id/calculator_bt_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:layout_row="3"
                android:layout_column="0"
                android:textSize="40sp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:textColor="#fff"
                android:background="@drawable/calculator_button_black"/>
            <Button
                android:id="@+id/calculator_bt0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_row="3"
                android:layout_column="1"
                android:textSize="40sp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:textColor="#fff"
                android:background="@drawable/calculator_button_black" />
            <Button
                android:id="@+id/calculator_bt_clr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清空"
                android:layout_row="3"
                android:layout_column="2"
                android:textSize="28sp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:textColor="#fff"
                android:background="@drawable/calculator_button_black" />
            <Button
                android:id="@+id/calculator_bt_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:layout_row="3"
                android:layout_column="3"
                android:textSize="40sp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:textColor="#fff"
                android:background="@drawable/calculator_button_gray" />
            <Button
                android:id="@+id/calculator_bt_equal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:layout_row="3"
                android:layout_column="4"
                android:textSize="40sp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="@dimen/demension_dp5"
                android:textColor="#fff"
                android:background="@drawable/calculator_button_orange"/>
        </GridLayout>
    </LinearLayout>
</LinearLayout>