<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <RelativeLayout
        android:id="@+id/rc_voip_call_mute"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/rc_voip_call_mute_btn"
            style="@style/callkit_voip_imagebutton_100_centerCrop"
            android:layout_centerHorizontal="true"
            android:onClick="onMuteButtonClick"
            android:src="@drawable/rc_voip_mute_selector" />

        <TextView
            style="@style/rc_voip_text_style_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rc_voip_call_mute_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/callkit_dimen_size_13"
            android:text="@string/rc_voip_mute" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/rc_voip_call_hang_up"
            style="@style/callkit_voip_imagebutton_100_centerCrop"
            android:layout_centerHorizontal="true"
            android:onClick="onHangupBtnClick"
            android:src="@mipmap/rc_voip_hangup" />

        <TextView
            style="@style/rc_voip_text_style_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rc_voip_call_hang_up"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/callkit_dimen_size_13"
            android:text="@string/rc_voip_hangup" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rc_voip_audio_chat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/rc_voip_audio_chat_btn"
            style="@style/callkit_voip_imagebutton_100_centerCrop"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/rc_voip_switch_voice" />

        <TextView
            style="@style/rc_voip_text_style_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rc_voip_audio_chat_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/callkit_dimen_size_13"
            android:text="@string/rc_voip_switch_to_audio" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rc_voip_invite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/rc_voip_invite_btn"
            style="@style/callkit_voip_imagebutton_100_centerCrop"
            android:layout_centerHorizontal="true"
            android:onClick="onHandFreeButtonClick"
            android:src="@drawable/rc_voip_invite" />

        <TextView
            style="@style/rc_voip_text_style_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rc_voip_invite_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/callkit_dimen_size_7"
            android:text="邀请聊天" />
    </RelativeLayout>


</LinearLayout>
