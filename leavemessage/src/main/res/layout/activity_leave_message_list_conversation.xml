<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/rc_picsel_toolbar"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/leave_message_list_back_img"
            android:layout_width="@dimen/demension_dp80"
            android:layout_height="@dimen/demension_dp100"

            android:layout_marginTop="@dimen/demension_dp25"
            android:background="@mipmap/leave_message_back_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/demension_dp30"
            android:text="会话列表"

            android:textColor="@color/white"
            android:textSize="30sp" />
    </RelativeLayout>

    <fragment
        android:id="@+id/conversationlist"
        android:name="io.rong.imkit.fragment.ConversationListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>