<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100px"
    android:id="@+id/cl_musiclist_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/player_color_bc000"
    >

    <com.fenda.common.view.CircleImageView
        android:id="@+id/iv_item_playicon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="37px"
        android:layout_width="55px"
        android:layout_height="55px" />

    <TextView
        android:id="@+id/tv_item_name"
        app:layout_constraintLeft_toRightOf="@+id/iv_item_playicon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="天生一对"
        android:layout_marginLeft="10px"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:textSize="28px"
        android:textColor="@color/player_white"
        android:maxLines="1"
        android:ellipsize="end"

        />

    <TextView
        android:id="@+id/tv_item_authorname"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="薛凯琪/方大同"

        android:textColor="@color/player_white"
        android:textSize="28px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingRight="46px"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="right"
        />

    <TextView
        android:id="@+id/tv_item_time"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="04:41"
        android:layout_marginRight="46px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28px"
        android:textColor="@color/player_white"
        android:visibility="gone"
        />

</android.support.constraint.ConstraintLayout>
