<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/call_main_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/demension_dp101"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/demension_dp55"
            android:paddingRight="@dimen/demension_dp15"
            android:src="@mipmap/call_ico_back" />


        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/demension_dp49"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/contacts"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/demension_dp37"
                android:layout_weight="1"
                android:background="@drawable/call_bg_memu_selector"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="@string/call_family_contacts"
                android:textColor="@color/call_selector_text_color"
                android:textSize="@dimen/textsize_sp40" />

            <RadioButton
                android:id="@+id/recorder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/demension_dp37"
                android:layout_weight="1"
                android:background="@drawable/call_bg_memu_selector"
                android:button="@null"
                android:gravity="center"
                android:text="@string/call_call_recorder"
                android:textColor="@color/call_selector_text_color"
                android:textSize="@dimen/textsize_sp40" />

            <RadioButton
                android:id="@+id/keyborad"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/demension_dp37"
                android:layout_weight="1"
                android:background="@drawable/call_bg_memu_selector"
                android:button="@null"
                android:gravity="center"
                android:text="@string/call_keyboard"
                android:textColor="@color/call_selector_text_color"
                android:textSize="@dimen/textsize_sp40" />
        </RadioGroup>
    </LinearLayout>

    <com.fenda.common.view.LazyViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


</LinearLayout>

