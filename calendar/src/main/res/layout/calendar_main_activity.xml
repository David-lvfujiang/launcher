<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CalendarMainActivity"
    android:fitsSystemWindows="true"
    android:background="@mipmap/calendar_backgroud_icon"
    >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="42sp"
    android:textColor="#ffcccccc"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:id="@+id/week_tv"
    android:text="星期五"
    />
    <RelativeLayout
        android:id="@+id/calendar_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@mipmap/calendar_book_icon"
        android:scaleType="fitStart" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/year_tv"
            android:text="2019年"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25px"
            android:textColor="#ffffffff"
            android:textSize="40sp"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-20dp"
            android:layout_below="@+id/year_tv"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/month_tv"
                android:text="6"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:textSize="65sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="77dp"
                android:text="月"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/month_tv"
                android:gravity="bottom"
                android:textColor="#ffffffff"
                android:textSize="50sp"
                />
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calendar_month_img"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="70dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calendar_day_img"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="220dp"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lunar_calendar_day_tv"
        android:textSize="42sp"
        android:textColor="#ffcccccc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:text=""
        />
</RelativeLayout>