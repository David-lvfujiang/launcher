<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="debug.TextActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:text="Button"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/not_answer_bt"
        android:layout_above="@+id/history_bt"
        android:layout_centerInParent="true"
        android:text="无法回答"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/history_bt"
        android:layout_centerInParent="true"
        android:text="历史上的今天"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idiom_bt"
        android:layout_below="@+id/history_bt"
        android:layout_centerInParent="true"
        android:text="成语解释"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/constellation_bt"
        android:layout_below="@+id/idiom_bt"
        android:layout_centerInParent="true"
        android:text="星座运势"
        />
</RelativeLayout>