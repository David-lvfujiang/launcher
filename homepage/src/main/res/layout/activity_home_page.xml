<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomePageActivity">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_Tipinfo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/color_B559CBD9"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

    <!--下部按钮 图片菜单条目 开始-->

    <ImageView
        android:id="@+id/iv_main_jd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_main_phone"
        android:layout_marginBottom="60dp"
        android:src="@mipmap/cm_chinamobile2"
        android:layout_width="100px"
        android:layout_height="100px" />

    <ImageView
        android:id="@+id/iv_main_phone"
        app:layout_constraintTop_toTopOf="@+id/iv_main_jd"
        app:layout_constraintBottom_toBottomOf="@+id/iv_main_jd"
        app:layout_constraintLeft_toRightOf="@+id/iv_main_jd"
        app:layout_constraintRight_toLeftOf="@+id/iv_main_other"
        android:src="@mipmap/cm_main_ico_phone"
        android:layout_width="100px"
        android:layout_height="100px" />

    <ImageView
        android:id="@+id/iv_main_other"
        app:layout_constraintTop_toTopOf="@+id/iv_main_jd"
        app:layout_constraintBottom_toBottomOf="@+id/iv_main_jd"
        app:layout_constraintLeft_toRightOf="@+id/iv_main_phone"
        app:layout_constraintRight_toLeftOf="@+id/iv_main_tools"
        android:src="@mipmap/cm_main_ico_other"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <ImageView
        android:id="@+id/iv_main_tools"
        app:layout_constraintTop_toTopOf="@+id/iv_main_jd"
        app:layout_constraintBottom_toBottomOf="@+id/iv_main_jd"
        app:layout_constraintLeft_toRightOf="@+id/iv_main_other"
        app:layout_constraintRight_toLeftOf="@+id/iv_main_study"
        android:src="@mipmap/cm_main_ico_tools"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <ImageView
        android:id="@+id/iv_main_study"
        app:layout_constraintTop_toTopOf="@+id/iv_main_jd"
        app:layout_constraintBottom_toBottomOf="@+id/iv_main_jd"
        app:layout_constraintLeft_toRightOf="@+id/iv_main_tools"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/cm_main_ico_study"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <!--下部按钮 图片菜单条目 结束-->



    <!--下部按钮 标题 菜单条目 开始-->
    <TextView
        android:id="@+id/tv_jd_title"
        app:layout_constraintTop_toBottomOf="@+id/iv_main_jd"
        app:layout_constraintLeft_toLeftOf="@+id/iv_main_jd"
        app:layout_constraintRight_toRightOf="@+id/iv_main_jd"
        android:text="@string/cm_main_chinamobile_title"
        android:textColor="@color/color_ffffff"
        android:textSize="28sp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_phone_title"
        app:layout_constraintTop_toBottomOf="@+id/iv_main_phone"
        app:layout_constraintLeft_toLeftOf="@+id/iv_main_phone"
        app:layout_constraintRight_toRightOf="@+id/iv_main_phone"
        android:text="@string/cm_main_phone_title"
        android:textColor="@color/color_ffffff"
        android:textSize="28sp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_other_title"
        app:layout_constraintTop_toBottomOf="@+id/iv_main_other"
        app:layout_constraintLeft_toLeftOf="@+id/iv_main_other"
        app:layout_constraintRight_toRightOf="@+id/iv_main_other"
        android:text="@string/cm_main_other_title"
        android:textColor="@color/color_ffffff"
        android:textSize="28sp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_tools_title"
        app:layout_constraintTop_toBottomOf="@+id/iv_main_tools"
        app:layout_constraintLeft_toLeftOf="@+id/iv_main_tools"
        app:layout_constraintRight_toRightOf="@+id/iv_main_tools"
        android:text="@string/cm_main_tools_title"
        android:textColor="@color/color_ffffff"
        android:textSize="28sp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_study_title"
        app:layout_constraintTop_toBottomOf="@+id/iv_main_study"
        app:layout_constraintLeft_toLeftOf="@+id/iv_main_study"
        app:layout_constraintRight_toRightOf="@+id/iv_main_study"
        android:text="@string/cm_main_hot_title"
        android:textColor="@color/color_ffffff"
        android:textSize="28sp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!--下部按钮 标题 菜单条目 结束-->


    <!--中部 语音提示信息布局 开始-->

    <RelativeLayout
        android:id="@+id/rl_AI_tip"
        app:layout_constraintLeft_toLeftOf="@+id/iv_main_jd"
        app:layout_constraintBottom_toTopOf="@+id/iv_main_jd"
        android:background="@drawable/shape_aitip_bg"
        android:layout_marginBottom="36dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="46dp">

        <ImageView
            android:id="@+id/iv_ai_mic"
            android:src="@mipmap/cm_ico_microphone"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_ai_tiptext"
            android:text="咪咕咪咕, 我要了解更多"
            android:textColor="@color/color_ffffff"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_ai_mic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_main_item_content"
        app:layout_constraintLeft_toLeftOf="@+id/iv_main_jd"
        app:layout_constraintBottom_toTopOf="@+id/rl_AI_tip"
        android:text="移动王卡 | 激活立即赠送20元话费！"
        android:textColor="@color/color_ffffff"
        android:textSize="48sp"
        android:layout_marginBottom="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/iv_main_tip_icon"
        app:layout_constraintLeft_toLeftOf="@+id/iv_main_jd"
        app:layout_constraintBottom_toTopOf="@+id/tv_main_item_content"
        android:src="@mipmap/cm_4g"
        android:layout_marginBottom="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!--中部 语音提示信息布局 结束-->


    <!--头部 时间,天气,收藏,记录 按钮 布局 开始-->


    <TextClock
        android:id="@+id/tv_header_time"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/iv_main_jd"
        android:text="06:16"
        android:textSize="100sp"
        android:textStyle="normal"
        android:textColor="@color/color_ffffff"
        android:format12Hour="HH:mm"
        android:format24Hour="HH:mm"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/iv_header_love"
        app:layout_constraintTop_toTopOf="@+id/tv_header_time"
        app:layout_constraintBottom_toBottomOf="@+id/tv_header_time"
        app:layout_constraintLeft_toRightOf="@+id/tv_header_time"
        android:layout_marginLeft="38dp"
        android:src="@mipmap/cm_ico_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_home_store"
        app:layout_constraintTop_toTopOf="@id/tv_header_time"
        app:layout_constraintBottom_toBottomOf="@+id/tv_header_time"
        app:layout_constraintLeft_toRightOf="@+id/iv_header_love"
        android:layout_marginLeft="30dp"
        android:src="@mipmap/cm_ico_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/iv_header_weather"
        app:layout_constraintTop_toTopOf="@id/tv_header_time"
        app:layout_constraintBottom_toBottomOf="@+id/tv_header_time"
        app:layout_constraintRight_toRightOf="@+id/iv_main_study"
        android:src="@mipmap/cm_ico_weather_cloudy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_header_temp_unit"
        app:layout_constraintTop_toTopOf="@id/tv_header_time"
        app:layout_constraintBottom_toBottomOf="@+id/tv_header_time"
        app:layout_constraintRight_toLeftOf="@+id/iv_header_weather"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_header_temp"
        android:text="℃"
        android:textColor="@color/color_ffffff"
        android:textSize="36sp"
        android:layout_marginRight="9dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_header_temp"
        app:layout_constraintTop_toTopOf="@id/tv_header_time"
        app:layout_constraintBottom_toBottomOf="@+id/tv_header_time"
        app:layout_constraintRight_toLeftOf="@+id/tv_header_temp_unit"
        android:text="30"
        android:textColor="@color/color_ffffff"
        android:textSize="64sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.constraint.ConstraintLayout
        android:id="@+id/linearlayout_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>