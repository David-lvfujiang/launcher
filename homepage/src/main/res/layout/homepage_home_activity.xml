<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomePageActivity">



    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_Tipinfo"
        android:background="@color/color_B559CBD9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </android.support.v7.widget.RecyclerView>

    <!--下部按钮 图片菜单条目 开始-->

    <!--下部按钮 图片菜单条目 结束-->



    <!--下部按钮 标题 菜单条目 开始-->
    <TextView
        android:id="@+id/tv_main_phone"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="9dp"
        android:text="@string/cm_main_phone_title"
        android:textColor="@color/color_ffffff"
        android:textSize="28sp"
        android:drawableTop="@mipmap/cm_main_ico_phone"
        android:drawablePadding="10dp"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"

        />


    <TextView
        android:id="@+id/tv_main_cmcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_main_phone"
        android:layout_alignBottom="@id/tv_main_phone"
        android:layout_marginStart="341dp"
        android:drawableTop="@mipmap/cm_china_mobile"
        android:drawablePadding="10dp"
        android:text="@string/cm_main_chinamobile_title"
        android:textColor="@color/color_ffffff"
        android:textSize="28sp"
        android:gravity="center_vertical"

        />


    <TextView
        android:id="@+id/tv_main_qqmusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cm_main_QQ_music"
        android:textColor="@color/color_ffffff"
        android:textSize="28sp"
        android:layout_marginStart="583dp"
        android:drawableTop="@mipmap/submenu_ico_qq_music"
        android:layout_alignBottom="@id/tv_main_phone"
        android:layout_alignTop="@id/tv_main_phone"
        android:gravity="center_horizontal"

        />


    <TextView
        android:id="@+id/tv_main_iqiyi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cm_main_iqiyi"
        android:textColor="@color/color_ffffff"
        android:textSize="28sp"
        android:layout_marginRight="100dp"
        android:drawableTop="@mipmap/submenu_ico_iqiyi"
        android:gravity="center_horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/tv_main_phone"
        android:layout_alignTop="@id/tv_main_phone"

        />

    <!--下部按钮 标题 菜单条目 结束-->


    <!--中部 语音提示信息布局 开始-->








    <ImageView
        android:id="@+id/iv_main_tip_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:src="@mipmap/cm_4g"
        android:layout_below="@id/tv_header_time"
        android:layout_marginTop="60dp"
        android:layout_alignLeft="@id/tv_header_time"

        />

    <TextView
        android:id="@+id/tv_main_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:text="移动王卡 | 激活立即赠送20元话费！"
        android:textColor="@color/color_ffffff"
        android:textSize="48sp"
        android:layout_below="@id/iv_main_tip_icon"
        android:layout_alignLeft="@id/tv_header_time"
        android:maxLines="1"
        android:ellipsize="end"


        />

    <TextView
        android:id="@+id/tv_ai_tiptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:text="咪咕咪咕, 我要了解更多"
        android:textColor="@color/color_ffffff"
        android:drawableLeft="@mipmap/cm_ico_microphone"
        android:drawablePadding="10dp"
        android:textSize="20sp"
        android:layout_below="@id/tv_main_item_content"
        android:layout_alignLeft="@id/tv_header_time"
        />

    <!--中部 语音提示信息布局 结束-->


    <!--头部 时间,天气,收藏,记录 按钮 布局 开始-->


    <TextClock
        android:id="@+id/tv_header_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:format12Hour="HH:mm"
        android:format24Hour="HH:mm"
        android:text="06:16"
        android:textColor="@color/color_ffffff"
        android:textSize="100sp"
        android:textStyle="normal"
        android:layout_marginLeft="40dp"
        />


    <ImageView
        android:id="@+id/iv_header_love"
        android:layout_marginLeft="38dp"
        android:src="@mipmap/cm_ico_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_header_time"
        android:layout_alignTop="@id/tv_header_time"
        android:layout_alignBottom="@id/tv_header_time"
        />

    <ImageView
        android:id="@+id/iv_home_store"
        android:layout_marginLeft="30dp"
        android:src="@mipmap/cm_ico_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_header_time"
        android:layout_alignBottom="@id/tv_header_time"
        android:layout_toRightOf="@id/iv_header_love"
        />


    <ImageView
        android:id="@+id/iv_header_weather"
        android:src="@mipmap/cm_ico_weather_cloudy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_header_time"
        android:layout_alignBottom="@id/tv_header_time"
        android:layout_marginRight="80dp"
        />

    <TextView
        android:id="@+id/tv_header_temp_unit"
        android:text="℃"
        android:textColor="@color/color_ffffff"
        android:textSize="36sp"
        android:layout_marginRight="9dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iv_header_weather"
        android:layout_alignBottom="@id/tv_header_temp"
        android:layout_alignTop="@id/tv_header_temp"
        android:layout_alignBaseline="@id/tv_header_temp"

        android:gravity="center_vertical"


        />

    <TextView
        android:id="@+id/tv_header_temp"
        android:layout_alignBottom="@id/iv_header_weather"
        android:layout_alignTop="@id/iv_header_weather"
        android:text="30"
        android:textColor="@color/color_ffffff"
        android:textSize="64sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/tv_header_temp_unit"
        android:gravity="center_vertical"
        />

    <ImageView
        android:id="@+id/img_gif"
        android:layout_width="94px"
        android:layout_height="48px"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/demension_dp80"
        />


        <com.fenda.common.view.MyNestedScrollView
            android:id="@+id/nest_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rv_Tipinfo"

            >

            <!--android:layout_below="@id/rv_Tipinfo"-->



        <LinearLayout
            android:id="@+id/content"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/submenu_bg"

            >
            <LinearLayout
                android:id="@+id/ll_submenu_back"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"

                >

                <ImageView
                    android:id="@+id/iv_submenu_drop_left"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/submenu_drop_left" />

                <ImageView
                    android:id="@+id/iv_submenu_drop_right"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/submenu_drop_right" />

            </LinearLayout>




                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_submenu_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/demension_dp10"
                        android:layout_marginStart="@dimen/demension_dp10" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/demension_dp55"
                            android:text="主人，下面这些功能我们正在快马加鞭地开发，敬请期待～"
                            android:textColor="#FFF"
                            android:textSize="28px"
                            android:paddingLeft="@dimen/demension_dp20"
                            />

            <RelativeLayout
                android:id="@+id/rela_be_dev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >



                <LinearLayout
                    android:id="@+id/lin1"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/submenu_layout_shape"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:onClick="onPullOnclick"

                    >

                    <ImageView
                        android:layout_width="112dp"
                        android:layout_height="112dp"
                        android:layout_marginTop="32dp"
                        android:src="@mipmap/submenu_ico_sleep" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19dp"
                        android:text="小睡眠"
                        android:textColor="#fff"
                        android:textSize="28sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lin2"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/submenu_layout_shape"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:onClick="onPullOnclick"
                    android:layout_toRightOf="@id/lin1"

                    >

                    <ImageView
                        android:layout_width="112dp"
                        android:layout_height="112dp"
                        android:layout_marginTop="32dp"
                        android:src="@mipmap/submenu_ico_voice" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19dp"
                        android:text="声音博物馆"
                        android:textColor="#fff"
                        android:textSize="28sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lin3"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/submenu_layout_shape"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:onClick="onPullOnclick"
                    android:layout_toRightOf="@id/lin2"

                    >

                    <ImageView
                        android:layout_width="112dp"
                        android:layout_height="112dp"
                        android:layout_marginTop="32dp"
                        android:src="@mipmap/submenu_ico_traffic_restrictions" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19dp"
                        android:text="交通限行"
                        android:textColor="#fff"
                        android:textSize="28sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lin4"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/submenu_layout_shape"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:onClick="onPullOnclick"
                    android:layout_toRightOf="@id/lin3"

                    >

                    <ImageView
                        android:layout_width="112dp"
                        android:layout_height="112dp"
                        android:layout_marginTop="32dp"
                        android:src="@mipmap/submenu_ico_exchange_rate" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19dp"
                        android:text="汇率"
                        android:textColor="#fff"
                        android:textSize="28sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lin5"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/submenu_layout_shape"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:onClick="onPullOnclick"
                    android:layout_below="@id/lin1"

                    >

                    <ImageView
                        android:layout_width="112dp"
                        android:layout_height="112dp"
                        android:layout_marginTop="32dp"
                        android:src="@mipmap/submenu_icon_food" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19dp"
                        android:text="食物营养查询"
                        android:textColor="#fff"
                        android:textSize="28sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lin6"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/submenu_layout_shape"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:onClick="onPullOnclick"
                    android:layout_below="@id/lin1"
                    android:layout_toRightOf="@id/lin5"

                    >

                    <ImageView
                        android:layout_width="112dp"
                        android:layout_height="112dp"
                        android:layout_marginTop="32dp"
                        android:src="@mipmap/submenu_ico_xinlingjitang" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19dp"
                        android:text="心灵鸡汤"
                        android:textColor="#fff"
                        android:textSize="28sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lin7"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/submenu_layout_shape"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:onClick="onPullOnclick"
                    android:layout_below="@id/lin1"
                    android:layout_toRightOf="@id/lin6"

                    >

                    <ImageView
                        android:layout_width="112dp"
                        android:layout_height="112dp"
                        android:layout_marginTop="32dp"
                        android:src="@mipmap/submenu_ico_express" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19dp"
                        android:text="快递查询"
                        android:textColor="#fff"
                        android:textSize="28sp" />
                </LinearLayout>




            </RelativeLayout>



        </LinearLayout>
        </com.fenda.common.view.MyNestedScrollView>

</RelativeLayout>