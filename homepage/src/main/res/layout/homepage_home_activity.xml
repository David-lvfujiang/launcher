<com.fenda.homepage.view.MyRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomePageActivity"
    android:id="@+id/rela_pre"
    >



    <com.fenda.homepage.view.LauncherRecycleView
        android:id="@+id/rv_Tipinfo"
        android:background="@color/color_B559CBD9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </com.fenda.homepage.view.LauncherRecycleView>

    <!--下部按钮 图片菜单条目 开始-->

    <!--下部按钮 图片菜单条目 结束-->



    <!--下部按钮 标题 菜单条目 开始-->
    <TextView
        android:id="@+id/tv_main_phone"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="9dp"
        android:text="@string/cm_main_phone_title"
        android:textColor="@color/color_ffffff"
        android:textSize="28sp"
        android:drawableTop="@mipmap/cm_main_ico_phone"
        android:drawablePadding="10dp"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"

        />


    <TextView
        android:id="@+id/tv_main_cmcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_main_phone"
        android:layout_alignBottom="@id/tv_main_phone"
        android:layout_marginStart="341dp"
        android:drawableTop="@mipmap/shifangtaihe"
        android:text="十方泰和"
        android:textColor="@color/color_ffffff"
        android:textSize="28sp"
        android:gravity="center_vertical"

        />


    <TextView
        android:id="@+id/tv_main_qqmusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cm_main_QQ_music"
        android:textColor="@color/color_ffffff"
        android:textSize="28sp"
        android:layout_marginStart="583dp"
        android:drawableTop="@mipmap/submenu_ico_qq_music"
        android:layout_alignBottom="@id/tv_main_phone"
        android:layout_alignTop="@id/tv_main_phone"
        android:gravity="center_horizontal"

        />


    <TextView
        android:id="@+id/tv_main_iqiyi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cm_main_iqiyi"
        android:textColor="@color/color_ffffff"
        android:textSize="28sp"
        android:layout_marginRight="100dp"
        android:drawableTop="@mipmap/submenu_ico_iqiyi"
        android:gravity="center_horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/tv_main_phone"
        android:layout_alignTop="@id/tv_main_phone"

        />

    <!--下部按钮 标题 菜单条目 结束-->


    <!--中部 语音提示信息布局 开始-->


    <ImageView
        android:id="@+id/iv_main_tip_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_main_item_content"
        android:layout_alignLeft="@id/tv_header_time"
        android:src="@mipmap/cm_4g" />

    <!--中部 语音提示信息布局 结束-->


    <!--头部 时间,天气,收藏,记录 按钮 布局 开始-->


    <TextView
        android:id="@+id/tv_main_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_ai_tiptext"
        android:layout_alignLeft="@id/tv_header_time"
        android:layout_marginLeft="-1dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="5dp"
        android:ellipsize="end"
        android:gravity="bottom"
        android:maxLines="2"
        android:text="移动王卡 | 激活立即赠送20元话费！"
        android:textColor="@color/color_ffffff"
        android:textSize="48sp" />

    <TextView
        android:id="@+id/tv_ai_tiptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_main_phone"
        android:layout_alignLeft="@id/tv_header_time"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="15dp"
        android:drawableLeft="@mipmap/cm_ico_microphone"
        android:drawablePadding="10dp"
        android:text="你好小乐, 我要了解更多"
        android:textColor="@color/color_ffffff"
        android:gravity="center_vertical"
        android:textSize="20sp" />

    <TextClock
        android:id="@+id/tv_header_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:format12Hour="HH:mm"
        android:format24Hour="HH:mm"
        android:text="06:16"
        android:textColor="@color/color_ffffff"
        android:textSize="100sp"
        android:textStyle="normal"
        android:layout_marginLeft="40dp"
        />


    <ImageView
        android:id="@+id/iv_header_love"
        android:layout_marginLeft="38dp"
        android:src="@mipmap/homepage_msg"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_header_time"
        android:layout_alignTop="@id/tv_header_time"
        android:layout_alignBottom="@id/tv_header_time"
        />

    <TextView
        android:id="@+id/tv_home_nsg_dot_red"
        android:layout_marginLeft="-12dp"
        android:background="@drawable/homepage_msg_dot_red"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="35dp"
        android:textColor="#fff"
        android:gravity="center"
        android:text="1"
        android:visibility="invisible"
        android:layout_alignTop="@id/tv_header_time"
        android:layout_toRightOf="@id/iv_header_love" />
    <ImageView
        android:id="@+id/iv_home_store"
        android:layout_marginLeft="30dp"
        android:src="@mipmap/cm_ico_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_header_time"
        android:layout_alignBottom="@id/tv_header_time"
        android:layout_toRightOf="@id/iv_header_love"
        android:visibility="gone"/>


    <ImageView
        android:id="@+id/iv_header_weather"
        android:src="@mipmap/cm_ico_weather_cloudy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_header_time"
        android:layout_alignBottom="@id/tv_header_time"
        android:layout_marginRight="80dp"
        />

    <TextView
        android:id="@+id/tv_header_temp_unit"
        android:text="℃"
        android:textColor="@color/color_ffffff"
        android:textSize="36sp"
        android:layout_marginRight="9dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iv_header_weather"
        android:layout_alignBottom="@id/tv_header_temp"
        android:layout_alignTop="@id/tv_header_temp"
        android:layout_alignBaseline="@id/tv_header_temp"

        android:gravity="center_vertical"


        />

    <TextView
        android:id="@+id/tv_header_temp"
        android:layout_alignBottom="@id/iv_header_weather"
        android:layout_alignTop="@id/iv_header_weather"
        android:text="30"
        android:textColor="@color/color_ffffff"
        android:textSize="64sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/tv_header_temp_unit"
        android:gravity="center_vertical"
        />

    <ImageView
        android:id="@+id/img_gif"
        android:layout_width="94px"
        android:layout_height="48px"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/demension_dp80"
        />



    <ViewStub
        android:id="@+id/stub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/more_submenu"
        />

    <!--<com.fenda.common.view.MyNestedScrollView-->
        <!--android:id="@+id/nest_scroll"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_below="@id/rv_Tipinfo"-->

        <!--&gt;-->

        <!--&lt;!&ndash;android:layout_below="@id/rv_Tipinfo"&ndash;&gt;-->





    <!--</com.fenda.common.view.MyNestedScrollView>-->

</com.fenda.homepage.view.MyRelativeLayout>
